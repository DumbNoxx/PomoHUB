---
import type { variantProp } from "@/schemas/components";
const {
  variant = "text"
  } = Astro.props as variantProp;

let css = "btn";

switch(variant) {
  case "icon":
    css += " " + variant;
    break;
  default:
    css += " " + variant;
    break;
}

---

<button class={css}>
  <slot />
</button>


